<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/product_detail_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/product_detail_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_detail_textview"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/product_detail_desc_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_detail_imageview"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="10dp" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>